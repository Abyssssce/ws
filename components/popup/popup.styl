.popup
  position fixed
  bottom 0
  left 0
  right 0
  z-index 9

  &__overlay
    abs()
    background $black
    opacity .6
    z-index 1

  &__panel
    position absolute
    bottom 0
    left 0
    width 100%
    z-index 2

  &__inner
    position relative

  &__close
    position absolute
    top 0
    right 0
