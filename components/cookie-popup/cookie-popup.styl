.cookie-popup
  &__wrapper
    padding 0 rem(13)

  &__inner
    margin 0 auto
    background $blackAlt
    color $gray

  &__body
    text-align center
    font-size 9px
    line-height 1.3
    text-transform uppercase
    padding 18px 18px 16px

  &__svg
    width 139px
    display block
    margin 0 auto 7px

  &__submit
    add-area(20, 100)
    color $whiteDark
    text-transform uppercase
    text-decoration underline
    font inherit
    margin-top 2px

    &:hover
      text-decoration none
