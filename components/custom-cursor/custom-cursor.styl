.custom-cursor
  display block
  position relative
  cursor none

  >>> a
  >>> button
    cursor none

  &__cursor
    position absolute
    mix-blend-mode difference
    z-index 10
    left 0
    top 0
    pointer-events none
    will-change transform

  &__cursor-wrapper
    transform scale(.1) translateZ(0)
    transition .15s ease-out

    &_hovered
      transform scale(.8) translateZ(0)

      &.custom-cursor__cursor-wrapper_mouseisdown
        transform scale(1) translateZ(0)

  &__cursor-inner
    position absolute
    left 0
    right 0
    width rem(90)
    height rem(90)
    border-radius 100%
    overflow hidden
    transition transform .15s ease-out, border .5s ease
    transform translate(-50%, -50%) translateZ(0)
    display flex
    align-items center
    justify-content center
    font-size rem(14)
    font-family 'fondo', Helvetica, sans-serif
    will-change border
    background currentColor

    &_cursor
      &_grabbing
        .custom-cursor__circle
          opacity 0

        .custom-cursor__arrow
          opacity 1
          transform translateX(0) !important

      &_play
        .custom-cursor__circle
          opacity 0

    &_size
      &_big
        font-size rem(17)
        width rem(80)
        height rem(80)

    &_color
      &_black
        color $black

      &_white
        color $white

  &__circle
    position absolute
    left 0
    top 0
    transition background .5s ease, opacity .5s ease
    width 100%
    height 100%
    opacity 1
    border-radius 100%
    border 2px solid currentColor
    background currentColor

    .custom-cursor__cursor-wrapper_hovered &
      background none
      opacity .2

  &__arrows
    display flex

  &__arrow
    opacity 0
    font-size 9px
    margin 0 3px
    transition opacity .5s ease, transform .5s ease

    &:first-of-type
      transform translateX(4px)

    &:last-of-type
      transform translateX(-4px)

  &__icon
    font-size 12px
